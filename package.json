{
  "name": "goldshore",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/site && astro dev",
    "build": "node packages/image-tools/process-images.mjs && cd apps/site && astro build",
    "build:web": "npm run build",
    "process-images": "node packages/image-tools/process-images.mjs",
    "deploy:pages": "cd apps/site && wrangler pages deploy dist --project-name=goldshore-org --commit-dirty=true",
    "deploy:worker": "cd apps/api-worker && wrangler deploy",
    "qa": "node .github/workflows/local-qa.mjs"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240821.0",
    "astro": "^4.13.0",
    "sharp": "^0.33.5",
    "wrangler": "^4.42.0"
  }
}
